<h2>Checkin Center</h2>
<hr/>

<%= render 'form' %>

<div class="modal fade" id="qr_info" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Qr Code</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table id="qr_table_info" class="table table-bordered">
          <thead>
            <tr>
              <td>ID</td>
              <td>Total Price</td>
              <td>Quantity</td>
              <td>Customer</td>
              <td>Ticket Type</td>
              <td>Paid</td>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success" id="submit-checkin" data-dismiss="modal">Check In</button>
      </div>
    </div>
  </div>
</div>
